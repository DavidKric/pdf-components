{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom", "dom.iterable", "es2021"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@allenai/pdf-components": ["../library/dist"],
      "@allenai/pdf-components/*": ["../library/dist/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
